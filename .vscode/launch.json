{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Unittest (current file)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false
    },
    {
      "name": "Python: Unittest (Single Test)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "args": ["-m", "unittest", "${fileBasenameNoExtension}.py"],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "justMyCode": false
    }
  ]
}
